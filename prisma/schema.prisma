generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model User {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String?
  lastName    String?
  email       String        @unique
  role        Role          @default(USER)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  submissions Submission[]
}

enum Role {
  ADMIN
  USER
}

model Form {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  createdBy   String
  
  sections    FormSection[]
  submissions Submission[]

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model FormSection {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  form     Form       @relation(fields: [formId], references: [id])
  formId   String     @db.ObjectId
  title    String
  order    Int        @default(0)          // Section order
  questions Question[]
}

model Question {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  section         FormSection    @relation(fields: [sectionId], references: [id])
  sectionId       String         @db.ObjectId
  label           String
  type            QuestionType
  required        Boolean        @default(false)
  options         Option[]       // Only for multiple choice, checkboxes, dropdowns
  order           Int            @default(0)           // Order in section
  validationRules Json?          // Example: { "minLength": 5, "maxLength": 50, "pattern": "^[a-zA-Z]+$" }
  visibilityRules Json?          // Conditional logic: { "dependsOn": "q2", "value": "Yes" }
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

enum QuestionType {
  TEXT
  TEXTAREA
  EMAIL
  PHONE
  PHONE_INTERNATIONAL
  NUMBER
  MULTIPLE_CHOICE
  CHECKBOX
  DROPDOWN
  DATE
  FILE
}

model Option {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  question   Question  @relation(fields: [questionId], references: [id])
  questionId String    @db.ObjectId
  label      String
  value      String
}

model Submission {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  form        Form              @relation(fields: [formId], references: [id])
  formId      String            @db.ObjectId
  user        User?             @relation(fields: [userId], references: [id])
  userId      String?           @db.ObjectId
  data        Json              // Stores answers: { questionId: answerValue }
  files       SubmissionFile[]  // Stores uploaded files
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model SubmissionFile {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  submission   Submission @relation(fields: [submissionId], references: [id])
  submissionId String      @db.ObjectId
  questionId   String      @db.ObjectId
  fileUrl      String
  fileName     String
  uploadedAt   DateTime    @default(now())
}
